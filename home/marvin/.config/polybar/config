[global/wm]

[colors]
transparent = #99000000
invisible = #0000
background = ${xrdb:background}
foreground = ${xrdb:foreground}
foreground-alt = ${xrdb:color2}
blue = ${xrdb:color12}
yellow = ${xrdb:color11}
red = ${xrdb:color9}
[bar/top]
monitor = HDMI-0

width = 99%
height = 20

offset-x = 0.5%
offset-y = 5

padding-left = 0
padding-right = 0

module-margin = 1

font-0 = DejaVu Sans:size=10
font-1 = Font Awesome 5 Free:size=10
font-2 = Font Awesome 5 Free:style=Solid:size=10
font-3 = Font Awesome 5 Brands:size=10

background = ${colors.background}
foreground = ${colors.foreground}
separator =

modules-left = bspwm
modules-center = date
modules-right = music pulseaudio fs-root fs-home network cpu memory
tray-position = right
tray-padding = 2

[module/date]
type = internal/date
interval = 5
date = %b %d
time = %l:%M %p
label = %date%, %time%%{A}

[module/bspwm]
type = internal/bspwm

format = <label-state>
label-occupied-foreground = ${colors.foreground-alt}
label-empty-foreground = ${colors.foreground-alt}

[module/fs-root]
type = internal/fs
format-mounted=<label-mounted>
mount-0 = /
label-mounted = %{F#5f875f}%{F-} %free%

[module/fs-home]
type = internal/fs
format-mounted=<label-mounted>
mount-0 = /home
label-mounted = %{F#5f875f}%{F-} %free%

[module/network]
type = internal/network
interface = enp5s0
label-connected = %{F#5f875f}%{F-} %local_ip% %{F#5f875f}
[module/memory]
type = internal/memory
interval = 2
format-prefix = " "
format-prefix-foreground = ${colors.foreground-alt}
label = %percentage_used%%


[module/cpu]
type = internal/cpu
format = <label> <ramp-coreload>
label = 
label-foreground = ${colors.foreground-alt}

ramp-coreload-font = 3
ramp-coreload-5-foreground = ${colors.yellow}
ramp-coreload-6-foreground = ${colors.yellow}
ramp-coreload-7-foreground = ${colors.red}
ramp-coreload-0 = ▁
ramp-coreload-1 = ▂
ramp-coreload-2 = ▃
ramp-coreload-3 = ▄
ramp-coreload-4 = ▅
ramp-coreload-5 = ▆
ramp-coreload-6 = ▇
ramp-coreload-7 = █

[module/system-usb-mount]
type = custom/script
exec = ~/.config/polybar/system-usb-mount.sh
interval = 5
click-left = ~/.config/polybar/system-usb-mount.sh --mount
click-right = ~/.config/polybar/system-usb-mount.sh --unmount

[module/pulseaudio]
type = internal/pulseaudio

sink = alsa_output.pci-0000_00_14.2.analog-surround-21

format-volume-background = ${colors.background}
format-muted-background = ${colors.background}

master-mixer = Master

label-muted-foreground = ${colors.foreground-alt}
ramp-volume-foreground = ${colors.foreground-alt}
format-volume = <ramp-volume> <label-volume>
label-muted = 
label-volume = %percentage:3%%

ramp-volume-0 = 
ramp-volume-1 = 
ramp-volume-2 = 

[module/music]
type = custom/script
interval = 3

format = <label>
label =  %output:0:45:...%
exec = ~/.config/polybar/playerctl.sh
click-left = playerctl play-pause
click-middle = playerctl next


[global/wm]
margin-top = 5
margin-bottom = 5
