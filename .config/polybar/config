[global/wm]

[colors]
transparent = #99000000
invisible = #0000
background = ${xrdb:background}
foreground = ${xrdb:foreground}
background-alt = #f72f343f
foreground-alt = #f3f4f5
foreground-dim = #676e7d
primary = #ffb52a
secondary = #e60053
alert = #ff6600

high = #268bd2
high-alt = #0c2b41
black = #000000
red = #E06C75
green = #98C379
orange = #D19A66
blue = #61AEEE
magenta = #C678DD
cyan = #56B6C2
lightgray = #ABB2BF
darkgray = #5C6370
white = #FFFFFF
dim = lightgray

[settings]
format-background = ${colors.background}
format-foreground = ${colors.foreground}
format-padding = 1

[bar/top]
monitor = ${env:MONITOR}

width = 100%
height = 22

offset-x = 0
offset-y = 0

padding-left = 0
padding-right = 15

module-margin = 1

font-0 = DejaVu Sans:size=10
font-1 = Font Awesome 5 Free:size=12
font-2 = Font Awesome 5 Free:style=Solid:size=12
font-3 = Font Awesome 5 Brands:size=12

background = ${colors.background}
foreground = ${colors.foreground}
separator =

modules-left = bspwm xwindow
modules-center = date
modules-right = cpu memory volume_icons music dropbox powermenu

tray-position = right
tray-padding = 5
tray-detached = true
tray-background = ${colors.background}

underline-size = 2
underline-color = ${colors.foreground}
wm-restack = bspwm

[module/xwindow]
type = internal/xwindow
;label = %title:0:30:...%
label = %title:0:30:...%  %{B- -o -u}

[module/date]
type = internal/date
interval = 5.0
date = %b %d
time = %l:%M %p
label = %date%, %time%%{A}

[module/bspwm]
type = internal/bspwm

pin-workspaces = false

format = <label-monitor> <label-state>
label-monitor = "%name%:"
label-focused = " %name% "
label-focused-underline = ${colors.foreground}
label-occupied = " %name% "
label-occupied-foreground = ${colors.dim}
label-empty =


[module/memory]
type = internal/memory
interval = 3
format = <label>
label = RAM %gb_used%


[module/cpu]
type = internal/cpu
format = <label> <ramp-coreload>
label = CPU %percentage%%

ramp-coreload-font = 3
ramp-coreload-5-foreground = ${colors.red}
ramp-coreload-6-foreground = ${colors.red}
ramp-coreload-7-foreground = ${colors.red}
ramp-coreload-0 = ▁
ramp-coreload-1 = ▂
ramp-coreload-2 = ▃
ramp-coreload-3 = ▄
ramp-coreload-4 = ▅
ramp-coreload-5 = ▆
ramp-coreload-6 = ▇
ramp-coreload-7 = █


[module/temperature]
type = internal/temperature
interval = 3

thermal-zone = 1

; Threshold temperature to display warning label
warn-temperature = 75
format = <ramp> <label>
label = TEMP %temperature%
label-warn = TEMP %temperature%
label-warn-foreground = ${colors.red}
ramp-0 =


[module/volume]
type = internal/volume

format-volume-background = ${settings.format-background}
format-volume-padding = ${settings.format-padding}
format-muted-background = ${settings.format-background}
format-muted-padding = ${settings.format-padding}

master-mixer = Master
; Use volume mapping (similar to amixer -M and alsamixer), where the increase in volume is linear to the ear
; Default: false
;mapping = true

format-volume = <label-volume>

label-muted-foreground = ${colors.dim}
label-muted = VOL -
label-volume = VOL %percentage%%


[module/volume_icons]
inherit = module/volume

format-volume = <ramp-volume> <label-volume>
label-muted = 
label-volume = %percentage%%

ramp-volume-0 = 
ramp-volume-1 = 
ramp-volume-2 = 

[module/dropbox]
type = custom/script
exec = ~/.config/polybar/dropbox.sh
interval = 1
label = %output%
format = <label>
click-left = ~/.config/polybar/dropbox.sh toggle
tail = true

[module/music]
type = custom/script
interval = 2

label = %output:0:45:...%
exec = ~/.config/polybar/mpris.sh
click-left = playerctl previous
click-middle = playerctl play-pause
click-right = playerctl next

[module/powermenu]
type = custom/menu

format-spacing = 1

label-open = 
label-open-foreground = ${colors.secondary}
label-close = 
label-close-foreground = ${colors.secondary}
label-separator = |
label-separator-foreground = ${colors.foreground-alt}

menu-0-0 =  
menu-0-0-exec = reboot
menu-0-1 =  
menu-0-1-exec = shutdown -t now
