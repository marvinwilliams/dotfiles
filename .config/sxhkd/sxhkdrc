#
# wm independent hotkeys
#

# terminal emulator
super + Return
	termite

super + o ; {q,s,v,r}
	{qutebrowser,spotify,termite -e nvim,termite -e ranger}

# htop
control + alt + Delete
	termite -e htop

# program launcher
super + space
	rofi -show combi -combi-modi 'drun,window,run' -modi combi

# make sxhkd reload its configuration files:
super + Escape
	pkill -USR1 -x sxhkd

#
# bspwm hotkeys
#

# quit bspwm normally
super + alt + Escape
	bspc quit

# close and kill
super + {_,shift + }x
	bspc node -{c,k}

# swap the current node and the biggest node
super + g
	bspc node -s biggest

#
# state/flags
#

# set the window state
super + {f,shift + f}
	bspc node -t {floating, tiled}

# set the node private
super + ctrl + p
	bspc node -g private

#
# focus/swap
#

# focus the node in the given direction
super + {_,shift + }{i,a,l,e}
	bspc node -{f,s} {west,south,north,east}

# focus the node for the given path jump
super + {p,b}
	bspc node -f @{parent,brother}

# focus the next/previous node in the current desktop
super + {_,shift + }c
	bspc node -f {next,prev}.local

# focus or send to the given desktop
super + {_,shift + }{m,comma,period,n,r,t}
	bspc {desktop -f,node -d} '^{1,2,3,4,5,6}'

#
# preselect
#

# preselect the direction
super + ctrl + {i,a,l,e}
	bspc node -p {west,south,north,east}

# preselect the ratio
super + ctrl + {1-9}
	bspc node -o 0.{1-9}

# cancel the preselection for the focused node
super + ctrl + space
	bspc node -p cancel

# cancel the preselection for the focused desktop
super + ctrl + shift + space
	bspc query -N -d | xargs -I id -n 1 bspc node id -p cancel

#
# move/resize
#

# expand a window by moving one of its side outward
super + w : {i,a,l,e,shift + i,shift + a,shift + l,shift + e}
	bspc node -z {left -20 0,bottom 0 20,top 0 -20,right 20 0, right -20 0,top 0 20,bottom 0 -20,left 20 0}

# move a floating window
super + {Left,Down,Up,Right}
	bspc node -v {-20 0,0 20,0 -20,20 0}

XF86AudioMute
    	amixer set Master toggle

{XF86AudioRaiseVolume, XF86AudioLowerVolume}
	amixer set Master 5%{+,-}

super + {_,shift + }XF86HomePage
	sudo systemctl {poweroff,reboot}
